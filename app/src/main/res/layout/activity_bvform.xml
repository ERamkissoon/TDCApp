<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BVFormActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/cardview_light_background"
            android:elevation="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_image_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="0.1"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:src="@drawable/back_04" />

            <View
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"></View>

            <ImageView
                android:id="@+id/save_image_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="right"
                android:layout_weight="0.1"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:src="@drawable/save" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cardview_light_background"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="16dp"
                        android:paddingBottom="6dp"
                        android:text="Location"
                        android:textAllCaps="true"
                        android:textColor="@color/teal"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/location_from"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/light_grey"></Spinner>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:text="Machine"
                        android:textAllCaps="true"
                        android:textColor="@color/teal"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal">

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:gravity="center"
                            android:background="@color/light_grey"
                            android:hint="@string/sample_asset_number"
                            android:textColor="@color/white" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:layout_weight="1"
                            android:layout_gravity="right"
                            android:clickable="true"
                            android:src="@drawable/barcode" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="@drawable/trapezoid"
                    android:gravity="right"
                    android:paddingTop="6dp"
                    android:paddingRight="16dp"
                    android:text="BV Details"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cardview_light_background"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="15dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:paddingTop="6dp"
                            android:paddingRight="10dp"
                            android:text="100 x"
                            android:gravity="right"
                            android:textColor="@color/teal"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/hundreds"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:background="@color/light_grey"
                            android:hint="000000"
                            android:inputType="number"
                            android:maxLength="6"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="6dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:paddingTop="6dp"
                            android:paddingRight="10dp"
                            android:text="50 x"
                            android:gravity="right"
                            android:textColor="@color/teal"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/fifties"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:background="@color/light_grey"
                            android:hint="000000"
                            android:inputType="number"
                            android:maxLength="6"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="6dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:paddingTop="6dp"
                            android:paddingRight="10dp"
                            android:text="20 x"
                            android:gravity="right"
                            android:textColor="@color/teal"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/twenties"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:background="@color/light_grey"
                            android:hint="000000"
                            android:inputType="number"
                            android:maxLength="6"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="6dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:paddingTop="6dp"
                            android:paddingRight="10dp"
                            android:text="10 x"
                            android:gravity="right"
                            android:textColor="@color/teal"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/tens"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:background="@color/light_grey"
                            android:hint="000000"
                            android:inputType="number"
                            android:maxLength="6"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="6dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:paddingTop="6dp"
                            android:paddingRight="10dp"
                            android:text="5 x"
                            android:gravity="right"
                            android:textColor="@color/teal"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/fives"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:background="@color/light_grey"
                            android:hint="000000"
                            android:inputType="number"
                            android:maxLength="6"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="6dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:paddingTop="6dp"
                            android:paddingRight="10dp"
                            android:text="1 x"
                            android:gravity="right"
                            android:textColor="@color/teal"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/ones"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:background="@color/light_grey"
                            android:hint="000000"
                            android:inputType="number"
                            android:maxLength="6"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/trapezoid"
                    android:gravity="right"
                    android:paddingTop="6dp"
                    android:paddingRight="16dp"
                    android:text="Bills Collected"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cardview_light_background"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="15dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="16dp"
                        android:paddingBottom="6dp"
                        android:text="Revenue Collected"
                        android:textAllCaps="true"
                        android:textColor="@color/teal"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/total_collected"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:hint="$ 56000"
                        android:gravity="center"
                        android:background="@color/light_grey"></EditText>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/trapezoid"
                    android:gravity="right"
                    android:paddingTop="6dp"
                    android:paddingRight="16dp"
                    android:text="Total Collected"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>