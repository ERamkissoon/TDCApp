<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MachineMovementFormActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@color/cardview_light_background"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/back_image_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="0.1"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:src="@drawable/back_04"/>
            <View
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"></View>

            <ImageView
                android:id="@+id/save_image_button"
                android:layout_weight="0.1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="right"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:src="@drawable/save"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cardview_light_background"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:text="Location From"
                        android:textColor="@color/teal"
                        android:paddingTop="16dp"
                        android:paddingBottom="6dp"/>

                    <Spinner
                        android:id="@+id/location_from"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/light_grey"></Spinner>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:text="Location To"
                        android:textColor="@color/teal"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"/>

                    <Spinner
                        android:id="@+id/location_to"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/light_grey"></Spinner>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:text="Asset Number"
                        android:textColor="@color/teal"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"/>

                    <Spinner
                        android:id="@+id/company_asset_number"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/light_grey"></Spinner>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:text="Board Type"
                        android:textColor="@color/teal"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"/>

                    <Spinner
                        android:id="@+id/board_type"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/light_grey"></Spinner>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:text="Serial Number"
                        android:textColor="@color/teal"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"/>

                    <EditText
                        android:id="@+id/serial_number"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:hint="SN902GRYA23432"
                        android:background="@color/light_grey"
                        android:textColor="@color/white"
                        android:gravity="center"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/trapezoid"
                    android:gravity="right"
                    android:paddingTop="6dp"
                    android:paddingRight="16dp"
                    android:text="Movement Details"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cardview_light_background"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="15dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:paddingTop="6dp"
                            android:text="Hard Meter In"
                            android:textAllCaps="true"
                            android:textColor="@color/teal"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/hard_meter_in"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:background="@color/light_grey"
                            android:hint="000000"
                            android:inputType="number"
                            android:maxLength="6"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="6dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:paddingTop="6dp"
                            android:text="Hard Meter Out"
                            android:textAllCaps="true"
                            android:textColor="@color/teal"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/hard_meter_out"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:background="@color/light_grey"
                            android:hint="000000"
                            android:inputType="number"
                            android:maxLength="6"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="6dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:paddingTop="6dp"
                            android:text="Soft Meter In"
                            android:textAllCaps="true"
                            android:textColor="@color/teal"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/soft_meter_in"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:background="@color/light_grey"
                            android:hint="000000"
                            android:inputType="number"
                            android:maxLength="6"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="6dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:paddingTop="6dp"
                            android:text="Soft Meter Out"
                            android:textAllCaps="true"
                            android:textColor="@color/teal"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/soft_meter_out"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:background="@color/light_grey"
                            android:hint="000000"
                            android:inputType="number"
                            android:maxLength="6"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/trapezoid"
                    android:gravity="right"
                    android:paddingTop="6dp"
                    android:paddingRight="16dp"
                    android:text="Meter Details"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cardview_light_background"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="15dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:paddingTop="6dp"
                            android:text="Board Percentage"
                            android:textAllCaps="true"
                            android:textColor="@color/teal"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/board_percentage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:background="@color/light_grey"
                            android:hint="50"
                            android:inputType="number"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="6dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:paddingTop="6dp"
                            android:text="Maximum Payout"
                            android:textAllCaps="true"
                            android:textColor="@color/teal"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/maximum_payout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:background="@color/light_grey"
                            android:hint="2000"
                            android:inputType="number"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="6dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:paddingTop="6dp"
                            android:text="Denomination"
                            android:textAllCaps="true"
                            android:textColor="@color/teal"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/denomination"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:background="@color/light_grey"
                            android:hint="1"
                            android:inputType="number"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/trapezoid"
                    android:gravity="right"
                    android:paddingTop="6dp"
                    android:paddingRight="16dp"
                    android:text="Machine Details"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>